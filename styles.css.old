.calculator {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 400px;
    height: 600px;
    border: 5px solid black;
}

#display {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300px;
    height: 50px;
    border: 3px solid black;
}

#numpad {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 300px;
    height: 400px;
    border: 3px solid black;
}

#numpad-left {
    width: 250px;
    height: 450px;
    border: 3px solid black;
}

#operators {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    width: 80px;
    height: 450px;
    border: 3px solid black;
}

.opbtn {
    width: 40px;
    height: 40px;
}

#keys {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
}
.keybtn {
    width: 40px;
    height: 40px;
}